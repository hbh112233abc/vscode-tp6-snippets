{
    "extend": {
        "scope": "html,php",
        "prefix": "extend",
        "body": [
            "{extend name='${1:public/base}'/}"
        ],
        "description": "模板继承"
    },
    "block": {
        "scope": "html,php",
        "prefix": "block",
        "body": [
            "{block name='${1:block_name}'}",
            "\t$0",
            "{/block}"
        ],
        "description": "模板区块"
    },
    "include": {
        "scope": "html,php",
        "prefix": "include",
        "body": [
            "{include file='${1:public/footer}'/}"
        ],
        "description": "引入模板文件"
    },
    "volist": {
        "scope": "html,php",
        "prefix": "volist",
        "body": [
            "{volist name='${1:list_name}' id='${2:vo}'}",
            "\t$0",
            "{/volist}"
        ],
        "description": "模板遍历 volist"
    },
    "foreach": {
        "scope": "html,php",
        "prefix": "foreach",
        "body": [
            "{foreach \\$${1:list_name} as \\$${2:key} => \\$${3:vo}}",
            "\t$0",
            "{/foreach}"
        ],
        "description": "模板遍历 foreach"
    },
    "for": {
        "scope": "html,php",
        "prefix": "for",
        "body": [
            "{for start='${1:开始值}' end='${2:结束值}'}",
            "\t{\\$i}$0",
            "{/for}"
        ],
        "description": "模板遍历 for"
    },
    "eq": {
        "scope": "html,php",
        "prefix": "eq",
        "body": [
            "{eq name='${1:name}' value='${2:value}'}$0{else/}{/eq}"
        ],
        "description": "比较标签 =="
    },
    "neq": {
        "scope": "html,php",
        "prefix": "neq",
        "body": [
            "{neq name='${1:name}' value='${2:value}'}$0{else/}{/neq}"
        ],
        "description": "比较标签 !="
    },
    "heq": {
        "scope": "html,php",
        "prefix": "heq",
        "body": [
            "{heq name='${1:name}' value='${2:value}'}$0{else/}{/heq}"
        ],
        "description": "比较标签 ==="
    },
    "nheq": {
        "scope": "html,php",
        "prefix": "nheq",
        "body": [
            "{nheq name='${1:name}' value='${2:value}'}$0{else/}{/nheq}"
        ],
        "description": "比较标签 !=="
    },
    "gt": {
        "scope": "html,php",
        "prefix": "gt",
        "body": [
            "{gt name='${1:name}' value='${2:value}'}$0{else/}{/gt}"
        ],
        "description": "比较标签 >"
    },
    "egt": {
        "scope": "html,php",
        "prefix": "egt",
        "body": [
            "{egt name='${1:name}' value='${2:value}'}$0{else/}{/egt}"
        ],
        "description": "比较标签 >="
    },
    "lt": {
        "scope": "html,php",
        "prefix": "lt",
        "body": [
            "{lt name='${1:name}' value='${2:value}'}$0{else/}{/lt}"
        ],
        "description": "比较标签 <"
    },
    "elt": {
        "scope": "html,php",
        "prefix": "elt",
        "body": [
            "{elt name='${1:name}' value='${2:value}'}$0{else/}{/elt}"
        ],
        "description": "比较标签 <="
    },
    "switch": {
        "scope": "html,php",
        "prefix": "switch",
        "body": [
            "{switch ${1:变量} }",
            "\t{case ${2:value1} }${3:输出内容1}{/case}",
            "\t{default /}${4:默认情况}",
            "{/switch}"
        ],
        "description": "条件判断 switch"
    },
    "if": {
        "scope": "html,php",
        "prefix": "if",
        "body": [
            "{if ${1:表达式} }",
            "\t{elseif ${2:表达式} /}${3:输出内容1}",
            "\t{else /}${4:默认情况}",
            "{/if}"
        ],
        "description": "条件判断 if"
    },
    "in": {
        "scope": "html,php",
        "prefix": "in",
        "body": [
            "{in name='${1:id}' value='${2:1,2,3}' }",
            "\t${3:输出内容1}",
            "{else /}",
            "{/in}"
        ],
        "description": "范围判断 in"
    },
    "notin": {
